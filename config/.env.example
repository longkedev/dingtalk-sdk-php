# 钉钉SDK环境变量配置示例

# 基础配置
DINGTALK_APP_KEY=your_app_key_here
DINGTALK_APP_SECRET=your_app_secret_here
DINGTALK_ENVIRONMENT=development

# API配置
DINGTALK_API_BASE_URL=https://oapi.dingtalk.com
DINGTALK_API_VERSION=v1.0
DINGTALK_API_TIMEOUT=30
DINGTALK_API_RETRIES=3

# HTTP客户端配置
DINGTALK_HTTP_TIMEOUT=30
DINGTALK_HTTP_CONNECT_TIMEOUT=10
DINGTALK_HTTP_RETRIES=3
DINGTALK_HTTP_RETRY_DELAY=1000
DINGTALK_HTTP_POOL_CONCURRENCY=10
DINGTALK_HTTP_POOL_MAX_CONNECTIONS=100

# 缓存配置
DINGTALK_CACHE_DRIVER=file
DINGTALK_CACHE_TTL=3600
DINGTALK_CACHE_PREFIX=dingtalk_

# 日志配置
DINGTALK_LOG_LEVEL=info
DINGTALK_LOG_PATH=storage/logs/dingtalk.log

# 安全配置
DINGTALK_VALIDATE_SSL=true
DINGTALK_ENCRYPTION_KEY=your_encryption_key_here

# 开发配置
DINGTALK_DEBUG=false
DINGTALK_MOCK_API=false
DINGTALK_LOG_REQUESTS=false
DINGTALK_LOG_RESPONSES=false